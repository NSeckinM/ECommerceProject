@model EditProductViewModel



<form method="post" asp-area="Admin" asp-controller="Product" asp-action="EditProduct">

    <input type="hidden" asp-for="Id" a />

    <div class="form-group">

        <label asp-for="ProductName">Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>

    </div>
    <div class="form-group">

        <label asp-for="Description">Ürün Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div class="form-group">

        <label asp-for="Price">Ürün Fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>


        <div class="form-group">
            <label asp-for="CategoryViewModel">Kategoriler</label>
            <select asp-for="CategoryId" class="custom-select">

                <option value="@Model.CategoryId">@Model.CategoryName</option>
                @foreach (var item in Model.CategoryViewModel.Categories)
                {
                    <option value="@item.Id">@item.CategoryName</option>
                }
            </select>
            <span asp-validation-for="CategoryViewModel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BrandViewModel">Markalar</label>
            <select asp-for="BrandId" class="custom-select">
                <option value="@Model.BrandId">@Model.BrandName</option>
                @foreach (var item in Model.BrandViewModel.Brands)
                {
                    <option value="@item.Id">@item.BrandName</option>
                }
            </select>
            <span asp-validation-for="BrandViewModel" class="text-danger"></span>
        </div>

        <button class="btn btn-outline-primary">Düzenle</button>
    </div>
</form>

<div class="mt-3">
    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-primary">Geri Dön</a>
</div>