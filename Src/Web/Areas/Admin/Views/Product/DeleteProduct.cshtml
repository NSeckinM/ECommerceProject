@model DeleteProductViewModel

<form method="post" asp-area="Admin" asp-controller="Product" asp-action="DeleteProduct">
    <div class="form-control">
        <input asp-for="Id" type="hidden" />
        <span> <strong>@Model.CategoryName</strong> kategorisinde bulunan <strong>@Model.BrandName</strong> markalı ve <strong>@Model.ProductName</strong> isimli ürün silinecektir onaylıyor musunuz ? </span>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary">Evet,Sil</button>
    </div>
</form>
<a asp-area="Admin" asp-controller="Product" asp-action="Index" class="m-2"> Geri dön </a>