@model CategoryViewModel

<div class="row">
    <div class="col-md-4 col-lg-3">
        <h3>ADMİN PANEL</h3>
        <div>
            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="Category" asp-action="Index">Kategoriler</a>
            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Ürünler</a>
            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="Brand" asp-action="Index">Markalar</a>

        </div>
    </div>

    <div class="col-md-8 col-lg-9">

        <div class="row">
            <div class="col-md-4 col-lg-6">
                <div>

                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="CreateCategory">Yeni Kategori Oluştur</a>

                </div>
            </div>

            <div class="col-md-8 col-lg-9">
                <div>

                    <h3 style="text-align:center">Kategoriler</h3>

                </div>

                <div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model.Categories)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.CategoryName</strong>
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-outline-success">Düzenle</a>
                                    </td>

                                    <td>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                                    </td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</div>